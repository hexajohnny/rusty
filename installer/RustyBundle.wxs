<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:bal="http://wixtoolset.org/schemas/v4/wxs/bal">
  <?define Version="0.1.3" ?>
  <?define MsiX86="dist\\Rusty-$(var.Version)-x86.msi" ?>
  <?define MsiX64="dist\\Rusty-$(var.Version)-x64.msi" ?>

  <Bundle
    Name="Rusty"
    Manufacturer="hexajohnny"
    Version="$(var.Version)"
    UpgradeCode="{B02F4D88-9B36-46D8-9D65-1F8C0F2EA5AB}">
    <BootstrapperApplication>
      <bal:WixStandardBootstrapperApplication
        LicenseUrl="https://github.com/hexajohnny/rusty/blob/main/LICENSE-MIT"
        Theme="hyperlinkLicense" />
    </BootstrapperApplication>

    <Chain>
      <MsiPackage
        Id="RustyMsiX64"
        SourceFile="$(var.MsiX64)"
        InstallCondition="VersionNT64" />
      <MsiPackage
        Id="RustyMsiX86"
        SourceFile="$(var.MsiX86)"
        InstallCondition="NOT VersionNT64" />
    </Chain>
  </Bundle>
</Wix>
